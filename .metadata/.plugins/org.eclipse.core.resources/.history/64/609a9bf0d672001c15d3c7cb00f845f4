package com.java8;

public class MethodAndConstructor {
	
	public static void test() {
		for(int i=0;i<3;i++) {
			System.out.println("Child Thread");
		}
	}

	public static void main(String[] args) {
		
		// need of method ref
		
//		Runnable r = () -> { 
//			for(int i=0;i<3;i++) {
//			System.out.println("Child Thread");
//			}
//		};
		
		Runnable r = Test :: 
		Thread t = new Thread(r);
		t.start();
		for(int i=0;i<3;i++) {
			System.out.println("Main Thread");
		}
	}

}
